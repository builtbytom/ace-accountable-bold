<section id="testimonials" class="relative py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="font-display heading-lg text-midnight mb-4">
        Client
        <span class="text-gradient"> Stories</span>
      </h2>
      <p class="text-xl text-slate max-w-3xl mx-auto">
        Real testimonials from Connecticut business owners
      </p>
    </div>
    
    <!-- Testimonials masonry grid -->
    <div class="columns-1 md:columns-2 lg:columns-3 gap-8 mb-16 space-y-8">
      <!-- John K. -->
      <div class="card-modern relative break-inside-avoid mb-8">
        <div class="absolute -top-4 -left-2 text-6xl text-teal/10 font-serif">"</div>
        <div class="relative z-10">
          <div class="flex gap-1 mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-amber" fill="currentColor" viewBox="0 0 20 20">
