---
// Sticky contact bar that appears on scroll
---

<div id="sticky-contact" class="fixed bottom-0 left-0 right-0 bg-midnight/95 backdrop-blur-md border-t border-white/10 transform translate-y-full transition-transform duration-300 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-3 flex flex-col sm:flex-row items-center justify-between gap-3">
      <!-- Message -->
      <p class="text-white text-sm sm:text-base">
        <span class="font-semibold">Ready to get your finances organized?</span>
        <span class="hidden sm:inline"> Let's talk about your business.</span>
      </p>
      
      <!-- Contact options -->
      <div class="flex items-center gap-4">
        <a href="tel:860-365-1147" class="flex items-center gap-2 text-white hover:text-teal transition-colors text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span class="hidden sm:inline">860.365.1147</span>
          <span class="sm:hidden">Call</span>
        </a>
        
        <a href="mailto:Jenna@aceaccountablebk.com" class="flex items-center gap-2 text-white hover:text-coral transition-colors text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="hidden sm:inline">Email</span>
          <span class="sm:hidden">Email</span>
        </a>
        
        <a href="#contact" class="btn-primary py-2 px-4 text-sm">
          Schedule Consultation
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Show sticky contact bar after scrolling past hero section
  const stickyContact = document.getElementById('sticky-contact');
  const heroSection = document.querySelector('#hero') || document.querySelector('main');
  
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          stickyContact?.classList.add('translate-y-full');
        } else {
          stickyContact?.classList.remove('translate-y-full');
        }
      });
    },
    { threshold: 0.1 }
  );
  
  if (heroSection) {
    observer.observe(heroSection);
  }
</script>