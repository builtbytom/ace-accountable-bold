---
// Art-focused resources section
---

<section id="resources" class="section-padding bg-white">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 bg-teal/10 px-4 py-2 rounded-full mb-6">
        <svg class="w-5 h-5 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
        <span class="text-sm font-medium text-teal">Free Resources</span>
      </div>
      <h2 class="section-title mb-4">Making Art Studio Finances Fun</h2>
      <p class="section-subtitle max-w-3xl mx-auto">
        Free guides, checklists, and tools to help Connecticut artists and creative professionals 
        manage their finances with confidence.
      </p>
    </div>

    <!-- Resource Categories -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <!-- Tax Deductions Guide -->
      <div class="card-modern group hover:border-teal/20">
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-primary rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate mb-2">Art Studio Tax Deductions</h3>
          <p class="text-gray mb-4">
            Discover $50,000+ in annual deductions most artists miss
          </p>
        </div>
        <div class="space-y-3 mb-6 text-sm">
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-teal flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Home studio calculations</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-teal flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Art supply deductions</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-teal flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Business travel for shows</span>
          </div>
        </div>
        <button class="btn-secondary w-full group-hover:border-teal resource-download" data-resource="tax-deductions">
          Download Guide
        </button>
      </div>

      <!-- Cash Flow Planner -->
      <div class="card-modern group hover:border-coral/20">
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-coral rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate mb-2">Seasonal Cash Flow Planner</h3>
          <p class="text-gray mb-4">
            Navigate feast-or-famine cycles like a pro
          </p>
        </div>
        <div class="space-y-3 mb-6 text-sm">
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-coral flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Monthly income tracker</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-coral flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Tax savings calculator</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-coral flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Emergency fund planner</span>
          </div>
        </div>
        <button class="btn-secondary w-full group-hover:border-coral resource-download" data-resource="cash-flow">
          Download Planner
        </button>
      </div>

      <!-- Gallery Contract Checklist -->
      <div class="card-modern group hover:border-amber/20">
        <div class="mb-6">
          <div class="w-16 h-16 bg-gradient-amber rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate mb-2">Gallery Contract Checklist</h3>
          <p class="text-gray mb-4">
            Know your numbers before signing gallery agreements
          </p>
        </div>
        <div class="space-y-3 mb-6 text-sm">
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-amber flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Commission structures</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-amber flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Payment terms</span>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-5 h-5 text-amber flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray">Red flags to avoid</span>
          </div>
        </div>
        <button class="btn-secondary w-full group-hover:border-amber resource-download" data-resource="gallery-contract">
          Download Checklist
        </button>
      </div>
    </div>

    <!-- Featured Tool -->
    <div class="bg-gradient-subtle rounded-3xl p-8 md:p-12">
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-white/80 px-4 py-2 rounded-full mb-6">
            <svg class="w-5 h-5 text-amber" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="text-sm font-medium text-slate">Most Popular Tool</span>
          </div>
          <h3 class="text-3xl font-bold text-slate mb-4">
            Commission Project Profitability Calculator
          </h3>
          <p class="text-lg text-gray mb-6">
            Stop underpricing your work! This calculator helps you factor in all costs 
            including materials, studio time, and your living wage to price commissions profitably.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-gray">Calculate true hourly rate</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-gray">Include all hidden costs</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-gray">Set profitable pricing</span>
            </li>
          </ul>
          <button class="btn-primary resource-download" data-resource="commission-calculator">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            Get the Calculator
          </button>
        </div>
        <div class="hidden lg:block">
          <div class="bg-white rounded-2xl shadow-soft p-8">
            <div class="text-center mb-6">
              <svg class="w-24 h-24 text-teal mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              <div class="text-3xl font-bold text-slate mb-2">$75/hour</div>
              <div class="text-gray">Your true hourly rate</div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray">Materials & Supplies</span>
                <span class="font-medium text-slate">$450</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray">Studio Time (20 hrs)</span>
                <span class="font-medium text-slate">$1,500</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray">Overhead (30%)</span>
                <span class="font-medium text-slate">$585</span>
              </div>
              <div class="h-px bg-gray-200"></div>
              <div class="flex justify-between items-center">
                <span class="font-bold text-slate">Commission Price</span>
                <span class="text-xl font-bold text-teal">$2,535</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-slate mb-4">
        Get Art Business Tips Every Month
      </h3>
      <p class="text-gray mb-6 max-w-2xl mx-auto">
        Join 200+ Connecticut artists who receive monthly tips on taxes, cash flow, 
        and building a sustainable creative business.
      </p>
      <form class="max-w-md mx-auto flex gap-4" id="newsletter-form">
        <input 
          type="email" 
          placeholder="your@email.com" 
          class="flex-1 px-6 py-3 border border-gray-200 rounded-full focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent"
          required
        >
        <button type="submit" class="btn-primary">
          Subscribe
        </button>
      </form>
      <p class="text-sm text-gray mt-4">
        No spam, ever. Unsubscribe anytime.
      </p>
    </div>
  </div>
</section>

<script>
  // Resource download tracking
  document.querySelectorAll('.resource-download').forEach(button => {
    button.addEventListener('click', (e) => {
      const resource = (e.currentTarget as HTMLElement).dataset.resource;
      // In production, this would trigger actual download
      alert(`Thanks for your interest! In the live site, the ${resource} guide would download here.`);
    });
  });

  // Newsletter form
  const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Thanks for subscribing! In the live site, this would add you to the newsletter.');
      newsletterForm.reset();
    });
  }
</script>

<style>
  .bg-gradient-subtle {
    background: linear-gradient(135deg, #e6f7f7 0%, #fef3ec 100%);
  }

  .bg-gradient-amber {
    background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  }
</style>