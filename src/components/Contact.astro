<section class="relative py-24 bg-gradient-to-br from-midnight via-slate to-midnight text-white overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 right-0 w-96 h-96 bg-teal/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-coral/20 rounded-full blur-3xl"></div>
  </div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Main content -->
    <div class="space-y-8">
      <h2 class="font-display heading-xl">
        Ready to Transform Your
        <span class="block text-gradient">Creative Finances?</span>
      </h2>
      
      <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto">
        Take the first step toward financial clarity. 
        Your art deserves a bookkeeper who gets it.
      </p>
      
      <!-- Contact options -->
      <div class="space-y-6 pt-8">
        <!-- CTA Button -->
        <div>
          <button class="btn-primary bg-white text-midnight hover:bg-pearl">
            Schedule Your Free Consultation
          </button>
          <p class="text-sm text-white/60 mt-4">
            30-minute video call • No pressure • No obligation
          </p>
        </div>
        
        <!-- Contact info -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-8 pt-4">
          <a href="tel:860-365-1147" class="flex items-center gap-3 text-white hover:text-teal transition-colors">
            <div class="w-12 h-12 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="font-semibold">860.365.1147</p>
              <p class="text-sm text-white/60">Text or call</p>
            </div>
          </a>
          
          <a href="mailto:Jenna@aceaccountablebk.com" class="flex items-center gap-3 text-white hover:text-coral transition-colors">
            <div class="w-12 h-12 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="font-semibold">Jenna@aceaccountablebk.com</p>
              <p class="text-sm text-white/60">Quick response time</p>
            </div>
          </a>
        </div>
      </div>
      
      <!-- Trust elements -->
      <div class="pt-12 space-y-6">
        <div class="flex items-center justify-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-teal" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
